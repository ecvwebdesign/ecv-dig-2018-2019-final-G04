{% extends 'base.html.twig' %}
{% block title %}Produit{% endblock %}

{% block body %}
    <main id="main" role="main" class="produit">
        {% for produit in produits %}
            <article>
                <header>
                    <h3>{{ produit.libelle }}</h3>
                </header>
                <section>
                    <img src="{{ produit.image }}" alt="">
                    <p>{{ produit.prix }} â‚¬</p>
                    <p>{{ produit.quantite }} restant</p>
                    <p>{{ produit.taille }}</p>
                </section>
                <footer>
                    <form action="{{ path("singleProduit", {"id": produit.id}) }}">
                        <input class="btn btn-fondbleu" type="submit" value="Voir plus">
                    </form>
                </footer>
            </article>
        {% endfor %}
    </main>
{% endblock %}
