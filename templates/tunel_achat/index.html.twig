        <p>04.Paiement</p>
    </section>
    <section id="step2">
        <h2>Mon compte Intersport</h2>
        <div class="displayMore">
            <div>
                <div>
                    <p>Je possède déjà un compte</p>
                    <span>Se connecter</span>
                </div>
                <div>Flèche</div>
            </div>
            <div class="hide" style="display:none;">
                <section>
                    <div>
                        <p>Email</p>
                        <div>Picto</div>
                    </div>
                    <input type="text" placeholder="Indiquez votre adresse mail">
                </section>
                <section>
                    <div>
                        <p>Email</p>
                        <div>Picto</div>
                        <span>Mot de passe oublié ?</span>
                    </div>
                    <input type="text" placeholder="Indiquez votre mot de passe">
                </section>
                <section>
                    <button id="suivantTo2">Se connecter</button>
                </section>
            </div>
        </div>
        <div class="displayMore">
            <div>
                <div>
                    <p>C'est ma première visite</p>
                    <span>Créer un compte</span>
                </div>
                <div>Flèche</div>
            </div>
            <div class="hide" style="display:none;">
                <div>
                    <p>Email</p>
                    <div>Picto</div>
                </div>
                <input type="text" placeholder="Indiquez votre adresse mail">
            </div>
        </div>
    </section>
    <section id="step3" style="display: none">
        <h2>Mon mode de livraison</h2>
        <div>
            <div>
                <div>picto</div>
                <div>
                    <p>Retrait en magasin</p>
                    <span>Gratuit</span>
                </div>
                <div>Flèche</div>
            </div>
        </div>
        <div>
            <div>
                <div>picto</div>
